  fit.QDA <- train(ShelveLoc ~ Sales + Price, 
                 data = ClassificationData,
                 method = "qda",
                 trControl = train_control)
  fit.KNN <- train(ShelveLoc ~ Sales + Price, 
                 data = ClassificationData,
